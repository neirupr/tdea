{{>header}}
{{>messages}}

<br><br>
<div class="d-flex flex-column align-items-center justify-content-center my-5 py-4">
	<div class="row no-margin">
		<div class="col-12 col-md-6 mx-auto no-padding">
			<form class="row" method="post" action="/login">
				<div class="form-group col-12">
					<label for="username">Nombre de usuario*</label>
					<input type="text" class="form-control" id="username" name="username" placeholder="Correo electrónico" required>
				</div>
				<div class="form-group col-12">
					<label for="password">Contraseña*</label>
					<input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required>
				</div>
				<div class="col-12 d-flex justify-content-center">
					<small class="form-text text-muted">Los campos con * son obligatorios</small>
				</div>
				<button type="submit" class="btn btn-primary col-4 ml-auto mr-auto d-flex justify-content-center mt-10">Iniciar sesión</button>
			</form>

			<div class="col-12 text-center mt-2">
				<span>No tienes una cuenta?</span>
				<a href="/register">Regístrate aquí</a>
			</div>
		</div>
	</div>
</div>

{{>footer}}